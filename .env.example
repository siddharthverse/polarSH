# Polar SH Configuration
# Get your access token from https://polar.sh/dashboard/settings/api
VITE_POLAR_ACCESS_TOKEN=your_polar_access_token_here

# Product ID from your Polar SH dashboard
# This is the ID of the product you want to sell
VITE_POLAR_PRODUCT_ID=your_product_id_here

# Server-side Polar configuration (for webhooks)
POLAR_ACCESS_TOKEN=your_polar_access_token_here
POLAR_WEBHOOK_SECRET=your_webhook_secret_here

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/polarsh
# Or use MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/polarsh

# Server Configuration
PORT=3001